<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/minggu3"
    android:background="#EFEFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hari 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HARI 15 - 21"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginHorizontal="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#4CAF50"/>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#4CAF50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Standar"
                android:fontFamily="@font/poppins_bold"
                android:background="#4CAF50"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Sarapan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarapan"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_breakfast"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="1 cangkir teh atau kopi hitam tanpa gula dan susu\nBubur havermut"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Cemilan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cemilan"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_snack"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Kacang pohon apa saja tanpa garam\n1 potong keju (asin atau rendah lemak lebih baik)"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Makan Siang -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Siang"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_makan"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="2 potong roti panggang gandum utuh dengan sayuran (bawang bombai, tomat, daun selada, dsb.)\nDaging tanpa lemak apa saja (sapi, dada ayam, domba, steik sancan, dsb.), panggang atau rebus"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Malam"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_lunch"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="2 potong roti panggang gandum utuh dengan sayuran (bawang bombai, tomat, daun selada, dsb.)\nDaging tanpa lemak apa saja (sapi, dada ayam, domba, steik sancan, dsb.), panggang atau rebus"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <!-- Lanjutkan untuk Hari 2 sampai Hari 7 dengan struktur serupa -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/checkMakanSiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:visibility="visible"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>