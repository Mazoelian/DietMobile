<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/next"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2F2F2">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="100"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="278dp"
        android:layout_height="361dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:src="@drawable/pose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kami bisa membantu!"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <!-- TextView for the subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turunkan berat dengan panduan profesional\nuntuk mendapatkan hasil lebih baik."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <!-- Additional text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya, ayo mulai\nmempersonalisasi program Anda."
        android:textSize="14sp"
        android:textColor="#7F7F7F"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <!-- Button at the bottom -->
    <Button
        android:id="@+id/continueNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/poppins_bold" />

</LinearLayout>