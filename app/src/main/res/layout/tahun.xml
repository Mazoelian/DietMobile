<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2F2F2"
    android:id="@+id/tahun">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kapan tahun lahir Anda?"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ini akan membantu kami melakukan penyesuaian ke program pribadi Anda."
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="8dp"
        android:background="#D8D8D8"
        android:textColor="#000000"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberTahun"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saya tidak ingin menjawab"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/continueButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="16dp"/>
</LinearLayout>